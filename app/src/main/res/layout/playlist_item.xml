<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="playlist"
            type="com.example.webradioplayer.model.IPlaylist"/>
        <variable name="callback"
            type="com.example.webradioplayer.ui.Callback.IPaylistClickCallback"/>
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/playlist_item_min_height"
        android:onClick="@{() ->  callback.onClick(playlist)}"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/playlist_item_min_height"
        android:layout_marginEnd="@dimen/playlist_item_min_height"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_marginStart="@dimen/playlist_item_min_height"
            android:layout_marginEnd="@dimen/playlist_item_min_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{playlist.nameRadiostation}"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:text="@{@string/product_price(product.price)}"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:text="@{product.description}" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</layout>
