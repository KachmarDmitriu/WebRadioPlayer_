<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="playlist"
            type="com.example.webradioplayer.model.IPlaylist"/>
        <variable name="callback_playlist"
            type="com.example.webradioplayer.ui.Callback.IPaylistClickCallback"/>
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:onClick="@{() ->  callback_playlist.onClick(playlist)}"
        android:orientation="horizontal"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                style="@style/textView_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:text="@{playlist.nameRadiostation}" />

            <TextView
                android:id="@+id/url"
                style="@style/textView_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:text="@{playlist.urlRadiostation}" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</layout>
