<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <data>

        <variable
            name="genre"
            type="com.example.webradioplayer.model.IGenre" />

        <variable
            name="callback_genre"
            type="com.example.webradioplayer.ui.Callback.IGenreClickCallback" />
    </data>


    <androidx.cardview.widget.CardView
        android:id="@id/genres"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_horizontal_margin"
        android:layout_marginEnd="@dimen/item_horizontal_margin"
        android:minHeight="@dimen/product_item_min_height"
        android:onClick="@{() ->  callback_genre.onClick(genre)}"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/genres"
                style="@style/textView_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:text="@{genre.str_genre}" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>